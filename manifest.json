{
  "manifest_version": 2,
  "name": "Dictionaries",
  "description": "All the best English dictionaries and you are just one click apart with this browser extension.",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "{e7155ce4-f2c8-4c6d-bf06-ef9feb2e864e}",
      "strict_min_version": "56.0a1"
    }
  },

  "background": {
    "scripts": ["./background/background.bundle.js"]
  },

  "browser-action": {
    "default-title": "Dictionaries",
    "default-icon": {
      "16": "./static/icon.svg",
      "32": "./static/icon.svg"
    },
    "default-popup": "./popup/popup.html"
  },

  "permissions": ["menus", "activeTab", "storage"],

  "icons": {
    "16": "./static/icon.svg",
    "32": "./static/icon.svg"
  }
}
